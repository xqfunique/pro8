<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F3F3"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:text="CALL AND SAVE"
            android:gravity="center_horizontal"
            android:textColor="#546E7A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resultphonetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoTextView"
            android:layout_marginLeft="20dp"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textColor="@android:color/black"
            android:maxLines="2"

            android:textSize="20sp" />


        <Button
            android:id="@+id/buttonTwo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultphonetext"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/buttonOne"
            android:text="2"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonOne"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultphonetext"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="27dp"
            android:text="1"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonFour"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonOne"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="0dp"
            android:text="4"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonFive"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonTwo"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/buttonFour"
            android:text="5"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSix"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonThree"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="75dp"
            android:layout_toRightOf="@id/buttonFive"
            android:text="6"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSeven"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonFour"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="0dp"
            android:text="7"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonEight"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonFive"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/buttonSeven"
            android:text="8"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonNine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSix"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="75dp"
            android:layout_toRightOf="@id/buttonEight"
            android:text="9"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonStar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSeven"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="0dp"
            android:text="*"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonZero"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonEight"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/buttonStar"
            android:text="0"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonHash"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonNine"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="75dp"
            android:layout_toRightOf="@id/buttonZero"
            android:text="#"
            android:textColor="#263238"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonCall"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonStar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="31dp"
            android:background="#29B6F6"
            android:text="Call"
            android:textColor="#FAFAFA"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSave"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonHash"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@id/buttonCall"
            android:background="#9CCC65"
            android:text="Save"
            android:textColor="#FAFAFA"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonHash"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@id/buttonSave"
            android:background="#F44336"
            android:text="DEL"
            android:textColor="#FAFAFA"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonThree"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultphonetext"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="75dp"
            android:layout_toRightOf="@+id/buttonTwo"
            android:text="3"
            android:textColor="#263238"
            android:textSize="20sp" />


    </RelativeLayout>
</layout>